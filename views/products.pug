extends ../layout

block content
      h1 All Products
	  hr
	  .row
		each product in products
		 .col-md-6
		  p
		  a(href="../images/" + product.productName + ".png" alt=product.productName targets="new")
		   img(src="../images/" + product.productName + ".png" alt=product.productName height=250 width=250)
		  
		  p
		  p="ID: " + productId
		  p="Name: " + productName
		  p="Price: $" + productPrice
		  p="Description: " + productDescription
		  p
		  a.btn.btn-raised(href="#", role="button")
		  p